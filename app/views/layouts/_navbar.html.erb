<div class="header-menu" id="main-header">
  <!-- Topbar -->
  <nav class="top-bar">
    <div class="top-bar-wrapper container">
      <div class="nav-item d-none d-md-block ml-3">
        <span>
          The best platform for your cat pictures!
          <span>
      </div>
      <div class="top-bar-info d-flex ml-auto">
        <div class="topbar-item">
          <a class="mr-2" href="#">Help & FAQs</a>
        </div>
        <% if user_signed_in? %>
          <div class="topbar-item">
            <a class="mr-3" href="<%= account_profile_path %>">My Account</a>
          </div>
           <div class="topbar-item">
            <a class="mr-3" href="<%= destroy_user_session_path %>" data-method='delete'>Logout</a>
          </div>

        <% else %>
          <div class="topbar-item">
            <a class="mr-3" href="<%= new_user_session_path %>">Login</a>
          </div>
          <div class="topbar-item">
            <a class="mr-3" href="<%= new_user_registration_path %>">Register</a>
          </div>

        <% end %>
      
      </div>
    </div>
  </nav>

  <!-- End navbar -->
  <!-- Navbar -->
  <div class="main-navbar">

    <div class="container">

      <nav class="navbar navbar-expand-lg navbar-light py-2">
        <a href="<%= root_path %>" >
        <img class="mr-4 " src="<%= asset_path('icons/logo_size')%>">

        </a>

         <div class="navbar-cart ml-auto text-dark d-sm-block d-md-none mr-4" style="width:40px;">
            <%= link_to carts_path do %>
            <div class="cart-icon">
              <i class="fas fa-shopping-cart fa-2x"></i>
            </div>
            <div class="cart-quantity">
              <span class="px-1 py-0">5</span>
            </div>
            <% end %>
          </div>


        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

         


        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="main-nav-item  <%= active_class(root_path) %>">
              <a class="main-nav-link mr-4" href="<%= root_path %>">Home</a>
            </li>
            <li class="main-nav-item  <%= active_class(items_path) %>">
              <a class="main-nav-link mr-4" href="<%= items_path %>">Shop</a>
            </li>
            <li class="main-nav-item  <%= active_class(about_path) %>">
              <a class="main-nav-link mr-4" href="<%= about_path %>">About</a>
            </li>
            <li class="main-nav-item  <%= active_class(contact_path) %>">
              <a class="main-nav-link" href="<%= contact_path %>">Contact</a>
            </li>
          </ul>

          <%if current_user != nil %>
            <div class="navbar-cart ml-auto text-dark d-none d-md-block">
              <%= link_to carts_path do %>
              <div class="cart-icon">
                <i class="fas fa-shopping-cart fa-2x"></i>
              </div>
              <div class="cart-quantity">
                <span class="px-1 py-0"><%= amount_item_cart %></span>
              </div>
              <% end %>
            </div>
          <%end%>

        </div>
      </nav>
    </div>

  </div>



</div>
