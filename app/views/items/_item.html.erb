<div class="col-lg-12">
  <div class="card mb-3">
    <h3 class="card-header"><%=item.title%></h3>
    <div class="card-body">
      <h5 class="card-title">Description</h5>
      <h6 class="card-subtitle text-muted"><%= truncate(item.description, length: 60) %></h6>
    </div>
    <% if item.image_url.attached? %>
    <img style="height: 200px; width: 100%; display: block;" src="<%=item.image_url%>" alt="<%=item.description%>">

    <% else %>
     <img style="height: 200px; width: 100%; display: block;" src="<%= asset_path('cat-default')%>" alt="<%=item.description%>">

    <% end %>
    <div class="card-body">
      <p class="card-text">Don't wait any longer to offer you a high quality render of this cutie !</p>
    </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Price:   
        <span class="font-weight-bold item-price">$<%=item.price%></span></li>
      </ul>
    <div class="card-body d-flex justify-content-between align-items-center ">
      <button type="button" class="btn btn-outline-primary"><%= link_to "More about it", item_path(item)%></button>
        <%= link_to carts_path(item_id: item.id) , method: :post  do %>
          <i class="fas fa-cart-plus fa-2x"></i>
        <% end %>
    </div>
  </div>
</div>