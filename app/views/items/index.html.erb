<div class="container">
<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table >
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= truncate(item.description, length: 20) %></td>
        <td><%= item.price %></td>
        <td><%= link_to 'Add to cart', carts_path(id: current_user.cart.id, item_id: item.id) , method: :post %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>

</div>


